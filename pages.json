{
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				// 导航栏文字颜色
				"navigationBarTextStyle": "white",
				// 导航栏背景演示
				"navigationBarBackgroundColor": "#345DC2",
				"app-plus": {
					// titleNView 导航栏
					"titleNView":{
						// 导航栏背景透明渐变效果 / 不占位
						"type" : "transparent",
						// 导航栏的输入框
						"searchInput": {
							// 输入框文字
							"placeholder": "搜索你想要的内容",
							// 输入框文字颜色
							"placeholderColor": "#979C9D",
							// 输入框背景颜色
							"backgroundColor": "#F0F1F2",
							// 输入框圆角
							"borderRadius": "30rpx",
							// 设置是否可输入
							"disabled": true,
							// 设置输入框非输入状态下文字在输入框对齐方式
							"align": "center"
						}
						// 自定义按钮 --- 只在APP端显示
						// #ifdef APP-PLUS
						,
						"buttons": [
							{
								// 要使用的图标
								"text": "\ue689",
								// 图标大小
								"fontSize": "23",
								// 图标路径
								"fontSrc": "/static/icon/iconfont.ttf",
								// 图标靠右
								"float": "right",
								// 图标背景颜色
								"background": "rgba(0,0,0,0)"
							}
						]
						// #endif
					}
				}
			}
		}
